<% if @article %>
<div class="title-author-top">
  <p>
    <h1>
      <strong>
      <%= @article.title %>
      </strong>
    </h1>
    <p>
      <strong>By <%= @article.author %> </strong> |  <em>Published  <%= @article.time_since_written %> </em>
    </p>
  </p>
  <hr>
</div>

<div class="content-area col-lg-12 col-sm-6">
  <%= raw(@article.article_content) %>
  <div class="cta-container center">
    <a href="/uber-sign-up" class="btn btn-large btn-success">Become an Uber Driver</a>
  </div>

<% if user_signed_in? && (current_user.email == "bbensch@gmail.com" || current_user.email == "abensch66@gmail.com") %>
    <%= link_to edit_article_path(@article), class:"btn btn-default" do %>
    <i class="glyphicon glyphicon-pencil">Edit</i>
      <%end%>
    <%= link_to 'Back to all Articles', articles_path, class:"btn btn-default" %>
  <%end%>
</div>
<hr>

<% end %>

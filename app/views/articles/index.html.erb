
<h1 class="title">Archives</h1>
<% if user_signed_in? && (current_user.email == "bbensch@gmail.com") %>
<h3>
  <%= link_to 'Create New Article', new_article_path, class:"btn btn-default" %>
</h3>
<table>
  <thead>
    <tr>
      <th class="col-md-5">Title</th>
      <th class="col-md-3">Written by</th>
      <th class="col-md-2">Published</th>
      <th class="col-md-1"></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class="col-md-5"><%= link_to article.title, article %></td>
        <td class="col-md-3"><%= article.author %></td>
        <td class="col-md-2"><%= article.time_since_written %></td>
          <td class="col-md-1">
            <%= link_to edit_article_path(article), class:"btn btn-default" do %>
            <i class="glyphicon glyphicon-pencil">Edit</i>
            <%end%>
          </td>
          <td class="col-md-1">
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>


<div class="row">
  <% @articles.each do |article| %>
    <div class="col-lg-6 col-sm-6 col-md-6">
        <div class="caption">
          <%= link_to article.title, article, :class=>"btn btn-primary title-link" %>
          <br>
          Published <%= article.time_since_written %>
        </div>
    </div>
  <%end%>

</div>
